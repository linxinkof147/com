<view class="body"><block a:if="{{hasPassword}}"><input class="uni-input common-input" type="text" placeholder="输入旧密码" data-event-opts="{{[['input',[['__set_model',['','oldpassword','$event',[]]]]]]}}" value="{{oldpassword}}" onInput="__e"/></block><input class="uni-input common-input" type="text" placeholder="输入新密码" data-event-opts="{{[['input',[['__set_model',['','newpassword','$event',[]]]]]]}}" value="{{newpassword}}" onInput="__e"/><input class="uni-input common-input" type="text" placeholder="输入确认密码" data-event-opts="{{[['input',[['__set_model',['','renewpassword','$event',[]]]]]]}}" value="{{renewpassword}}" onInput="__e"/><button class="{{(('user-set-btn')+' '+((disabled)?'user-set-btn-disable':''))}}" loading="{{loading}}" type="primary" disabled="{{disabled}}" data-event-opts="{{[['tap',[['submit',['$event']]]]]}}" onTap="__e">完成</button></view>