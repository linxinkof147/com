<view class="body"><input class="uni-input common-input" type="number" placeholder="输入手机号" disabled="{{isbind}}" data-event-opts="{{[['input',[['__set_model',['','phone','$event',[]]]]]]}}" value="{{phone}}" onInput="__e"/><block a:if="{{!isbind}}"><view class="login-input-box"><input class="uni-input common-input forget-input" type="text" placeholder="请输入验证码" data-event-opts="{{[['input',[['__set_model',['','checknum','$event',[]]]]]]}}" value="{{checknum}}" onInput="__e"/><view data-event-opts="{{[['tap',[['getCheckNum',['$event']]]]]}}" class="forget u-f-ajc login-font-color yanzhengma" onTap="__e"><view class="u-f-ajc">{{!codetime?'获取验证码':codetime+' s'}}</view></view></view></block><button class="{{(('user-set-btn')+' '+((disabled)?'user-set-btn-disable':''))}}" loading="{{loading}}" type="primary" disabled="{{disabled||isbind}}" data-event-opts="{{[['tap',[['submit',['$event']]]]]}}" onTap="__e">{{isbind?"已绑定":"立即绑定"}}</button></view>